<Window x:Class="TestDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestDesktop"
        mc:Ignorable="d"
        Title="Управление персоналом" Height="600" Width="900" MinHeight="300" MinWidth="450" Icon="/Images/Logo.png">
    <Grid>
        <Grid x:Name="HeaderGrid" VerticalAlignment="Top" Height="70" Background="#78B24B">
            <Image Source="/Images/Logo.png" Width="60" Height="60" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            <Border Height="35" CornerRadius="10" Margin="100,0,100,0" Padding="5" Background="White">
                <TextBox IsEnabled="False" x:Name="HeaderTbx" Text="Организационная структура" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" FontSize="14"/>
            </Border>
        </Grid>
        <Frame x:Name="frame" Margin="0,70,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
