<Page x:Class="TestDesktop.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestDesktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="530" d:DesignWidth="900"
      Title="Main">

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" x:Name="scrlViewGraph" VerticalScrollBarVisibility="Visible" Background="LightGray" Margin="20" Grid.Column="0">
            <Canvas x:Name="canvas"/>
        </ScrollViewer>
        <ScrollViewer Background="LightGray" Margin="20" Grid.Column="1">
            <StackPanel x:Name="parent"/>
        </ScrollViewer>
    </Grid>
</Page>
